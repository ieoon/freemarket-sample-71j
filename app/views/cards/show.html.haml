.pay-header
  .pay-header__box
    .pay-header__box__heder
      .pay-header__box__heder__frame
        .pay-header__box__heder__frame__link
          .pay-header__box__heder__frame__link__image
            = link_to root_path do
              = image_tag "logo.png", class: "pay-header__box__heder__frame__link__image"

  .pay-header__box__middle
    .pay-header__box__middle__frame
      .pay-header__box__middle__frame__top
        %label 登録クレジットカード情報
        %br
        = "**** **** **** " + @default_card_information.last4
        %br
        - exp_month = @default_card_information.exp_month.to_s
        - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
        = exp_month + " / " + exp_year
        = form_tag(delete_cards_path, method: :delete, id: 'charge-form',  name: "inputForm") do
          %input{ type: "hidden", name: "card_id", value: "" }
          %button 削除する

  .pay-header__footer
    .pay-header__footer__sub
      .pay-header__footer__sub__box
        .pay-header__footer__sub__box__text
          .pay-header__footer__sub__box__text__link
            プライバシーポリシー
        .pay-header__footer__sub__box__text
          .pay-header__footer__sub__box__text__link
            フリマ利用規約
        .pay-header__footer__sub__box__text
          .pay-header__footer__sub__box__text__link
            特定商取引に関する表記
    .pay-header__footer__image
      .pay-header__footer__image__pasting
    .pay-header__footer__logo
      .pay-header__footer__logo__pasting
        © Furima