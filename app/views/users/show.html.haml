.page-ansem
  = render 'items/header'
  .page-ansem-center
    .page-ansem-center__top
      .page-ansem-center__top__icon
      .page-ansem-center__top__name
        .page-ansem-center__top__name__first
          = @user.nickname
        .page-ansem-center__top__name__last
          さんマイページ
    .page-ansem-center__bottom
      .page-ansem-center__bottom__title
        .page-ansem-center__bottom__title__inner
          .page-ansem-center__bottom__title__inner__sider
            　　各種登録
      .page-ansem-center__bottom__text
        .page-ansem-center__bottom__text__contents
          .page-ansem-center__bottom__text__contents__top
            - if user_signed_in?
              = link_to destroy_user_session_path, method: :delete, class: "right-btn" do
                ●ログアウト
          .page-ansem-center__bottom__text__contents__bottom
            - if !Card.nil?
              = link_to "●クレジットカードの登録", new_card_path(current_user.id)
            - else
              .page-ansem-center__bottom__text__contents__bottom
                = link_to "●クレジットカードの削除", delete_cards_path(@user)
  = render 'items/footer'
  